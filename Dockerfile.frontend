# Stage 1: Build the React app
FROM node:18 AS build-stage
WORKDIR /frontend

# Install dependencies
COPY ./frontend/package*.json ./
RUN npm install

# Copy the source code
COPY ./frontend/ ./

# Expose the Vite development server port (3000)
EXPOSE 3000

# Use Vite for hot-reloading in development
CMD ["npm", "run", "dev"]
